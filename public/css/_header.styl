//--------------------
// Header
//--------------------

.header-container
    height navHeight
    border-top 1px solid #eee

header
    background #fff
    position fixed
    top 0
    width 100%

// Logo

.title
    width 202px
    height 35px
    margin 8px 0 0 23px
    image "/img/nav-logo.png"

// Nav

/* ==============
   MOBILE: Menu
   ============== */
nav
    text-align right
    font-size 13px
    letter-spacing 2px

nav ul
    margin 0
    padding 0
    list-style-type none

nav a
    display block
    line-height navHeight

    text-align center
    text-decoration none
    font-weight bold
    text-transform uppercase

    color #929292

    &:hover
        color #000

// Nav sign up button
.sign-up--nav
    background #000

    &:hover
        color #fff


/* ==========================================================================
   Media Queries
   ========================================================================== */

@media only screen and (min-width: 480px)

/* ====================
    INTERMEDIATE: Menu
   ==================== */

    nav a
        display inline-block
        margin 0
        padding 0 20px


@media only screen and (min-width: 768px)

    /* ====================
    WIDE: CSS3 Effects
    ==================== */

    // nav ul
    //     float right

    .title
        float left

    .sign-up--nav
        padding 0 30px
        position relative
        top -1px
        height navHeight + 1

    nav li:nth-last-child(2) a
        padding-right 30px
