//--------------------
// Header
//--------------------

.header-container
    height navHeight
    background #fff
    border 1px solid #eee

/* ==============
    MOBILE: Menu
    ============== */
nav
    float right

nav ul
    margin 0
    padding 0
    list-style-type none

nav a
    display block
    line-height navHeight - 2

    text-align center
    text-decoration none
    font-weight bold

    color #929292

    &:hover
        color #000

// Nav sign up button
.sign-up--nav
    background #000


/* ==========================================================================
   Media Queries
   ========================================================================== */

@media only screen and (min-width: 480px)

/* ====================
    INTERMEDIATE: Menu
   ==================== */

    nav a
        float left
        margin 0 1.7%
        padding 0 2%


@media only screen and (min-width: 768px)

    /* ====================
    WIDE: CSS3 Effects
    ==================== */

    nav ul
        float right

    .title
        float left

    .sign-up--nav
        position relative
        top -1px
        right -1px
        width  370px
        height navHeight + 2
