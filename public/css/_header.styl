//--------------------
// Header
//--------------------

header
    background #fff
    position fixed
    top 0
    width 100%
    z-index headerZIndex

// Logo

.title
    width 202px
    height 35px
    margin 8px 0 7px 23px
    float left
    image "/img/nav-logo.png" contain
    background-repeat no-repeat

// Nav

/* ==============
   MOBILE: Menu
   ============== */
nav
    display inline
    text-align right
    font-size 13px
    letter-spacing 2px

nav ul
    margin 0
    padding 0
    list-style-type none
    clear both
    display none

nav a
    display block
    line-height navHeight

    text-align left
    text-decoration none
    font-weight bold
    text-transform uppercase

    padding 0 23px
    color #929292

    &:hover
        color #000

.nav-icon
    // Ideally use icon font for this and social icons
    background url("/img/nav-icon.svg") no-repeat
    background-size contain
    width navHeight + 23px
    height navHeight
    padding ((navHeight - 40px) / 2) 23px
    border 0
    float right

/* ==========================================================================
   Media Queries
   ========================================================================== */

// @media only screen and (min-width: 480px)


@media only screen and (min-width: 768px)

    /* ====================
    WIDE: CSS3 Effects
    ==================== */

    .title
        float left

// Landscape tablet
@media only screen and (min-width: 1024px)

    .title
        margin-bottom 0

    nav
        letter-spacing 1px
        float right

        ul
            clear none
            display block

        a
            text-align center
            padding 0 5px
            display inline-block
            margin 0

        li:nth-last-child(2) a
            padding-right 10px

    .nav-icon
        display none

// Desktops
@media only screen and (min-width: 1200px)
    nav
        letter-spacing 2px

        a
            padding 0 20px

        nav li:nth-last-child(2) a
            padding-right 30px
