.social
    margin 1em 0 0
    padding 0
    list-style-type none

    li
        display inline

    a
        display inline-block
        height 25px
        width 25px
        margin 0 10px
        background-repeat no-repeat
        background-size (socialSpriteImageWidth * 3) 25px

.social--twitter
    image "/img/social.png"

.social--facebook
    image "/img/social.png"
    background-position (socialSpriteImageWidth * -1) 0

.social--pinterest
    image "/img/social.png"
    background-position (socialSpriteImageWidth * -2) 0
