//--------------------
// Scroll Panes
//--------------------

.scroll-panes
    z-index scrollBgZIndex
    height 100%
    position absolute
    top 0
    width 100%

.scroll-bg--wrapper
    overflow hidden
    position relative

.scroll-bg--front
    position fixed
    top 0
    left 0
    overflow hidden
    z-index scrollFrontZIndex
    width 100%
    height 100%

.pane-1
    image '/img/bg1.jpg'

.pane-2
    image '/img/bg2.jpg'

.pane-3
    image '/img/bg3.jpg'

.pane-4
    image '/img/bg4.jpg'

.pane-5
    image '/img/bg5.jpg'

.pane
    display table
    background-repeat no-repeat
    background-position center
    background-size auto 100%
    height 100%
    width  100%
    box-sizing border-box
    transform translatez(0)
    margin-top navHeight

.pane-wrapper
    display table-cell
    vertical-align middle

.pane-text
    width 90%
    margin 0 5%
